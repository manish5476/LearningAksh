{
  "name": "edtech-platform",
  "version": "2.1.0",
  "description": "Comprehensive Learning Aksh Backend with Enterprise Features",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "debug": "ndb src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e",
    "test:load": "artillery run tests/load/artillery.yml",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migrate.js",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "db:drop": "node scripts/drop-database.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "queue:monitor": "node scripts/queue-monitor.js",
    "queue:clean": "node scripts/clean-queues.js",
    "cache:clear": "node scripts/clear-cache.js",
    "deploy:staging": "node scripts/deploy-staging.js",
    "deploy:prod": "node scripts/deploy-prod.js",
    "prepare": "husky",
    "postinstall": "npm run db:migrate"
  },
  "engines": {
    "node": "22.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Learning Aksh",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/edtech-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/edtech-platform/issues"
  },
  "homepage": "https://github.com/yourusername/edtech-platform#readme",
  "keywords": [
    "edtech",
    "education",
    "learning",
    "platform",
    "nodejs",
    "express",
    "mongodb",
    "mongoose"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@bull-board/express": "^6.0.0",
    "@elastic/elasticsearch": "^8.16.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@google-cloud/storage": "^7.15.0",
    "@sendgrid/mail": "^8.1.4",
    "@stripe/stripe-js": "^4.0.0",
    "aws-sdk": "npm:@aws-sdk/client-s3@^3.998.0",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "bullmq": "^5.0.0",
    "compression": "^1.7.5",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "express-fileupload": "^1.5.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-useragent": "^1.0.15",
    "express-validator": "^7.2.0",
    "fast-csv": "^5.0.2",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.0.0",
    "helmet-csp": "^4.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "juice": "^10.0.0",
    "mongoose": "^8.9.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.15.1",
    "prom-client": "^15.1.3",
    "pug": "^3.0.3",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.0",
    "razorpay": "^2.9.6",
    "redis": "^4.7.0",
    "response-time": "^2.3.3",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "stripe": "^17.0.0",
    "twilio": "^5.0.0",
    "uuid": "^11.0.0",
    "validator": "^13.12.0",
    "web-push": "^3.6.7",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.20",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^15.2.10",
    "mongodb-memory-server": "^10.0.0",
    "ndb": "^1.1.5",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "supertest": "^7.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/fixtures/"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
