{
  "name": "edtech-platform",
  "version": "2.0.0",
  "description": "Comprehensive EdTech Platform Backend with Enterprise Features",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "debug": "ndb src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:load": "artillery run tests/load/artillery.yml",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migrate.js",
    "db:backup": "node scripts/backup.js",
    "db:restore": "node scripts/restore.js",
    "db:drop": "node scripts/drop-database.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "queue:monitor": "node scripts/queue-monitor.js",
    "queue:clean": "node scripts/clean-queues.js",
    "cache:clear": "node scripts/clear-cache.js",
    "deploy:staging": "node scripts/deploy-staging.js",
    "deploy:prod": "node scripts/deploy-prod.js",
    "prepare": "husky install",
    "postinstall": "npm run db:migrate"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "EdTech Platform Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/edtech-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/edtech-platform/issues"
  },
  "homepage": "https://github.com/yourusername/edtech-platform#readme",
  "keywords": [
    "edtech",
    "education",
    "learning",
    "platform",
    "nodejs",
    "express",
    "mongodb",
    "mongoose"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "^3.554.0",
    "@elastic/elasticsearch": "^8.13.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@google-cloud/storage": "^7.10.0",
    "@sendgrid/mail": "^8.1.0",
    "@stripe/stripe-js": "^3.3.0",
    "@types/node": "^20.12.7",
    "aws-sdk": "^2.1599.0",
    "bcryptjs": "^3.0.3",
    "bull": "^4.12.2",
    "bull-board": "^5.12.0",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.6",
    "csv-parser": "^3.0.0",
    "dotenv": "^17.3.1",
    "ejs": "^3.1.9",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "express-fileupload": "^1.5.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.0",
    "express-useragent": "^1.0.15",
    "express-validator": "^7.0.1",
    "fast-csv": "^5.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "helmet-csp": "^3.4.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "juice": "^10.0.0",
    "mongoose": "^8.23.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "node-html-parser": "^6.1.12",
    "nodemailer": "^6.9.13",
    "pdfkit": "^0.15.0",
    "prom-client": "^15.1.0",
    "pug": "^3.0.3",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.13",
    "response-time": "^2.3.2",
    "sharp": "^0.33.3",
    "slugify": "^1.6.6",
    "stripe": "^15.5.0",
    "twilio": "^4.22.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "web-push": "^3.6.7",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.10",
    "eslint": "^9.39.3",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.2.0",
    "ndb": "^1.1.5",
    "nodemon": "^3.1.14",
    "prettier": "^3.8.1",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/fixtures/"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}